<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <android.support.v7.widget.Toolbar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/collect_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimaryDark"
            android:elevation="5dp"
            android:title="@string/collect_title"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


        <ImageView
            android:id="@+id/collect_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/collect_toolbar"
            android:src="@mipmap/collect_img"
            android:scaleType="centerCrop"/>

        <Button
            android:id="@+id/bt_sampling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/collect_img"
            android:background="@drawable/btn_bg"
            android:layout_margin="@dimen/vertical_margin"
            android:textColor="@color/white"
            android:text="开始取样"/>

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_below="@id/bt_sampling"
            android:layout_height="1dip"
            android:background="#eeeeee" />


    </RelativeLayout>

</FrameLayout>